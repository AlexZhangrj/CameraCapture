<UserControl x:Class="VideoModule.Views.WebCamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:local="clr-namespace:VideoModule.Views"
             mc:Ignorable="d" d:DesignWidth="509" d:DesignHeight="199">

    <DockPanel LastChildFill="true" Background="CornflowerBlue">
        <WindowsFormsHost Name="windowsFormsHost1"    
                                              HorizontalAlignment="Stretch"             
                                              VerticalAlignment="Stretch" >
            <wf:Panel x:Name="DisplayPanel" SizeChanged="DisplayPanel_SizeChanged" Dock="Fill" AutoSize="True" />
        </WindowsFormsHost>
    </DockPanel>
</UserControl>

